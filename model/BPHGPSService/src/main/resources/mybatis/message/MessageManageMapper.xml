<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN" "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="com.tianyi.bph.dao.GpsOrganRelationDAO">
	
	<resultMap id="gpsOrganBean" type="com.tianyi.bph.bean.GpsOrganBean">
	    <id 	column="ID" 		jdbcType="DECIMAL" property="gpsId" />
	    <result column="GPS_NAME" 	jdbcType="VARCHAR" property="gpsName" />
 	   	<result column="NUMBER" 	jdbcType="VARCHAR" property="gpsCode" />
 	   	<result column="NAME"		jdbcType="VARCHAR" property="organName" />
    	<result column="OPATH" 		jdbcType="VARCHAR" property="organPath" />
  	</resultMap>
  
	<sql id="gpsColumns">
		G.ID 		as gpsId,
		G.GPS_NAME 	as gpsName, 
		G.NUMBER	as gpsCode, 
		O.NAME		as organName,
		O.PATH		as organPath		
	</sql>
	
	<select id="findGpsMessageList" parameterType="Long" resultMap="gpsOrganBean">
		SELECT  <include refid="gpsColumns"/>
	    FROM T_GPS G, T_ORGAN O WHERE G.ORG_ID = O.ORGAN_ID;
	</select>
	
</mapper>