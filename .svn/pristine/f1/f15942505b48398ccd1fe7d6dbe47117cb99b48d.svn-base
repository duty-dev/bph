      #{createTime,jdbcType=TIMESTAMP}, #{note,jdbcType=VARCHAR})
  </insert>
  <insert id="insertSelective" parameterType="com.tianyi.bph.domain.system.Role">
    insert into ROLE
    <trim prefix="(" suffix=")" suffixOverrides=",">
