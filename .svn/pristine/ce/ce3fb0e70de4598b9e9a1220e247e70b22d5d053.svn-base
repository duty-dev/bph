package com.tianyi.bph.dao.base;

import java.util.List;

import com.tianyi.bph.dao.MyBatisRepository;
import com.tianyi.bph.domain.base.Weapon;
import com.tianyi.bph.query.base.WeaponQuery;
@MyBatisRepository
public interface WeaponDAO {
    //通过id删除
	int delete(Long id);
    
    int insert(Weapon weapon);

    //通过id查询
    Weapon select(Long id);
     
    int update(Weapon weapon);
    
    //分页查询
    List<Weapon> findByPage(WeaponQuery weaponQuery);
    //分页总条数
    int findCount(WeaponQuery weaponQuery);
    //条件查询
    List<Weapon> findByQuery(WeaponQuery weaponQuery);
}