<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tianyi.bph.dao.base.VehicleDAO">

  <resultMap id="BaseResultMap" type="com.tianyi.bph.domain.base.Vehicle">
    <id column="ID" jdbcType="DECIMAL" property="id" />
    <result column="CREATE_TIME" jdbcType="TIMESTAMP" property="createTime" />
    <result column="INTERCOM_ID" jdbcType="DECIMAL" property="intercomId" />
    <result column="LICENSE" jdbcType="VARCHAR" property="license" />
    <result column="UPDATE_TIME" jdbcType="TIMESTAMP" property="updateTime" />
    <result column="VEHICLE_BRAND_CODE" jdbcType="VARCHAR" property="vehicleBrandCode" />
    <result column="PURPOSE" jdbcType="VARCHAR" property="purpose" />
    <result column="ORGAN_ID" jdbcType="DECIMAL" property="organId" />
    <result column="GPS_DEVICE_ID" jdbcType="DECIMAL" property="gpsDeviceId" />
    <result column="NOTE" jdbcType="VARCHAR" property="note" />
    <result column="STATE" jdbcType="DECIMAL" property="state" />
    <result column="SORT_NO" jdbcType="DECIMAL" property="sortNo" />
    <result column="EQUIPMENT" jdbcType="VARCHAR" property="equipment"/>
    <result column="VEHICLE_TYPE_CODE" jdbcType="VARCHAR" property="vehicleTypeCode"/>
  </resultMap>
  
  <resultMap id="OrganResultMap" type="com.tianyi.bph.domain.system.Organ">
    <id column="OID" jdbcType="DECIMAL" property="id" />
    <result column="OCODE" jdbcType="VARCHAR" property="code" />
    <result column="ONAME" jdbcType="VARCHAR" property="name" />
    <result column="OPARENT_ID" jdbcType="DECIMAL" property="parentId" />
    <result column="OPATH" jdbcType="VARCHAR" property="path" />
    <result column="OSHORT_NAME" jdbcType="VARCHAR" property="shortName" />
    <result column="OORG_TYPE_CODE" jdbcType="VARCHAR" property="orgTypeCode" />
    <result column="OORG_PC_CGY_CODE" jdbcType="VARCHAR" property="orgPcCgyCode" />
    <result column="OLEVLE" jdbcType="DECIMAL" property="levle" />
    <result column="OSTATE" jdbcType="DECIMAL" property="state" />
    <result column="OCREATE_TIME" jdbcType="TIMESTAMP" property="createTime" />
    <result column="OPRESET" jdbcType="DECIMAL" property="preset" />
    <result column="OUPDATE_TIME" jdbcType="TIMESTAMP" property="updateTime" />
    <result column="ONOTE" jdbcType="VARCHAR" property="note" />
    <result column="OSORT_NO" jdbcType="DECIMAL" property="sortNo" />
  </resultMap>
  
  <!-- 将从机构查询到的所有的列封装到警员里面 -->
  <resultMap type="com.tianyi.bph.domain.base.Vehicle" id="AllResultMap" extends="BaseResultMap">  
       <association property="organ" resultMap="OrganResultMap"/>
   </resultMap>
  
  
  <sql id="Organ_Column_List">
    O.ID as OID, O.CODE as OCODE, O.NAME as ONAME, O.PARENT_ID as OPARENT_ID, O.PATH as OPATH, O.SHORT_NAME as OSHORT_NAME, 
    O.ORG_TYPE_CODE as OORG_TYPE_CODE, O.ORG_PC_CGY_CODE as OORG_PC_CGY_CODE, O.LEVLE as OLEVLE, O.STATE as OSTATE, 
    O.CREATE_TIME as OCREATE_TIME, O.PRESET as OPRESET, O.UPDATE_TIME as OUPDATE_TIME, O.NOTE as ONOTE, O.SORT_NO as OSORT_NO
  </sql>
  
  <sql id="Base_Column_List">
    V.ID, V.CREATE_TIME, V.INTERCOM_ID, V.LICENSE, V.UPDATE_TIME, V.VEHICLE_BRAND_CODE, V.PURPOSE, V.ORGAN_ID, 
    V.GPS_DEVICE_ID, V.NOTE, V.STATE, V.SORT_NO,V.EQUIPMENT,V.VEHICLE_TYPE_CODE
  </sql>
  
  <!-- 根据id查询 -->
  <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from VEHICLE
    where ID = #{id,jdbcType=DECIMAL}
  </select>
  
  <!-- 根据id删除 -->
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
    delete from VEHICLE
    where ID = #{id,jdbcType=DECIMAL}
  </delete>
  
  <!-- 插入操作 -->
  <insert id="insert" parameterType="com.tianyi.bph.domain.base.Vehicle">
      <selectKey statementType="STATEMENT" order="BEFORE" resultType="Integer" keyProperty="id" >  
			SELECT VEHICLE_SEQ.NEXTVAL FROM DUAL
	 </selectKey>
    insert into VEHICLE (ID, CREATE_TIME, INTERCOM_ID, 
      LICENSE, UPDATE_TIME, VEHICLE_BRAND_CODE, 
      PURPOSE, ORGAN_ID, GPS_DEVICE_ID, 
      NOTE, STATE, SORT_NO,EQUIPMENT,VEHICLE_TYPE_CODE
      )
    values (#{id,jdbcType=DECIMAL}, #{createTime,jdbcType=TIMESTAMP}, #{intercomId,jdbcType=DECIMAL}, 
      #{license,jdbcType=VARCHAR}, #{updateTime,jdbcType=TIMESTAMP}, #{vehicleBrandCode,jdbcType=VARCHAR}, 
      #{purpose,jdbcType=VARCHAR}, #{organId,jdbcType=DECIMAL}, #{gpsDeviceId,jdbcType=DECIMAL}, 
      #{note,jdbcType=VARCHAR}, #{state,jdbcType=DECIMAL}, #{sortNo,jdbcType=DECIMAL}, #{equipment,jdbcType=VARCHAR}
      , #{vehicleTypeCode,jdbcType=VARCHAR}
      )
  </insert>
  
  
 <!-- 修改操作 -->
  <update id="updateByPrimaryKey" parameterType="com.tianyi.bph.domain.base.Vehicle">
    update VEHICLE
    set CREATE_TIME = #{createTime,jdbcType=TIMESTAMP},
      INTERCOM_ID = #{intercomId,jdbcType=DECIMAL},
      LICENSE = #{license,jdbcType=VARCHAR},
      UPDATE_TIME = #{updateTime,jdbcType=TIMESTAMP},
      VEHICLE_BRAND_CODE = #{vehicleBrandCode,jdbcType=VARCHAR},
      PURPOSE = #{purpose,jdbcType=VARCHAR},
      ORGAN_ID = #{organId,jdbcType=DECIMAL},
      GPS_DEVICE_ID = #{gpsDeviceId,jdbcType=DECIMAL},
      NOTE = #{note,jdbcType=VARCHAR},
      STATE = #{state,jdbcType=DECIMAL},
      SORT_NO = #{sortNo,jdbcType=DECIMAL},
      EQUIPMENT= #{equipment,jdbcType=VARCHAR},
      VEHICLE_TYPE_CODE= #{vehicleTypeCode,jdbcType=VARCHAR}
    where ID = #{id,jdbcType=DECIMAL}
  </update>
  
  
  <!-- 条件、分页 -->
 	<sql id="find">
		select <include refid="Base_Column_List" />,<include refid="Organ_Column_List" />
    	from VEHICLE V inner join  ORGAN O
    	on V.ORGAN_ID = O.ID
		where 1=1 
		<!-- 排序字段 -->
		<if test="sort != null and sort != ''">
			order by  #{sort,jdbcType=VARCHAR} ,#{sortType,jdbcType=VARCHAR}
		</if>
		<!-- 根据车牌号码查询 -->
		<if test="license != null and license != ''">
		where LICENSE = #{license,jdbcType=VARCHAR}
		</if>
		<if test="path != null and path != '' and !child">
			AND O.PATH  =  #{path,jdbcType=VARCHAR}
		</if>
		<if test="path != null and path != '' and child">
			AND O.PATH  like #{path,jdbcType=VARCHAR}||'%' 
		</if>
	</sql>
	
	
	<!-- 分页查询 -->
	<select id="findByPage" parameterType="com.tianyi.bph.query.base.VehicleQuery"  resultMap="BaseResultMap" >
		select * from ( select r.*, rownum ro from (
			<include refid="find" />
			) r  where rownum &lt;=#{end}) where ro &gt;#{begin}
	</select>
	
	<!-- 查询总条数 -->
	<select id="findCount"  resultType="Integer">
		select count(distinct ID) from (
			<include refid="find" />
		) count_
	</select>
	
	<!-- 条件查询 -->
	<select id="findByQuery" parameterType="com.tianyi.bph.query.base.VehicleQuery"  resultMap="BaseResultMap" >
		<include refid="find" />
	</select>
  
  
</mapper>